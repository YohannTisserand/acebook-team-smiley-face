<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <div class="card">
        <div class="card-body">
          <%= render 'form', chatroom: Chatroom.new %>
        <hr> 
        <% @chatrooms.each do |room|  %>
        <% end %>

      <div class="col-9">
    </div>
  </div>
</div>


<h1>Chatrooms</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chatrooms.each do |chatroom| %>
      <tr>
        <td><%= chatroom.content %></td>
        <td><%= chatroom.user_id %></td>
        <td><%= chatroom.room_id %></td>
        <td><%= link_to 'Show', chatroom %></td>
        <td><%= link_to 'Edit', edit_chatroom_path(chatroom) %></td>
        <td><%= link_to 'Destroy', chatroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chatroom', new_chatroom_path %>
