

<% @posts.each do |post| %>
  <p><%= post.message %></p>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>

<% if @user %>
  Logged in as: <%= @user.email %>

  <%= button_to "Logout", logout_path, method: :delete %>

  <% else %>

  <%= link_to login_path do %>
    Login
  <% end %>
<% end %>